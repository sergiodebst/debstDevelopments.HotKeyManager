<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:localcontrols="clr-namespace:debstDevelopments.HotKeyManager.View.Controls">
    <ControlTemplate x:Key="{x:Type localcontrols:KeyboardShortcutBox}" TargetType="{x:Type localcontrols:KeyboardShortcutBox}">
        <TextBox x:Name="ShortcutBox" Text="{Binding Text, RelativeSource={x:Static RelativeSource.TemplatedParent}, Mode=OneWay}" IsReadOnly="True" />
    </ControlTemplate>
</ResourceDictionary>